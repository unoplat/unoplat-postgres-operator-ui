{
    "categories": [
        {
            "title": "## 🚀 Features",
            "labels": ["feature", "enhancement"]
        },
        {
            "title": "## 🐛 Bug Fixes",
            "labels": ["bug"]
        },
        {
            "title": "## 📚 Documentation",
            "labels": ["documentation"]
        },
        {
            "title": "## 🧪 Tests",
            "labels": ["test", "tests"]
        }
    ],
    "sort": {
        "order": "DESC",
        "on_property": "mergedAt"
    },
    "template": "# Changelog\n\nAll notable changes to this project will be documented in this file. The format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n{{CHANGELOG}}",
    "pr_template": "- {{TITLE}} ([#{{NUMBER}}]({{URL}})) @{{AUTHOR}}",
    "empty_template": "_No changes_",
    "label_extractor": [
        {
            "pattern": "\\[CHANGE\\] (.+)",
            "on_property": "title",
            "method": "match",
            "target": "$1"
        }
    ],
    "ignore_labels": ["duplicate", "wontfix", "invalid", "question"]
}
